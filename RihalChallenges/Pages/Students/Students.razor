@page "/Students"
@inherits Studentsbase

<br />
<h3>Students Info</h3>

<NavLink class="nav-link" href="AddStudent">
    <MudButton Variant="Variant.Filled" Color="Color.Primary">Add New Student</MudButton>
</NavLink>
<br />

@if (_Students is null)
{
    <p><em>Loading... !</em></p>
}
else
{
    <StudentList Students="@_Students" OnDeleteClicked="OnDeleteClickedHandler" OnUpdateClicked="OnUpdateClickedHandler">
    </StudentList>
}

